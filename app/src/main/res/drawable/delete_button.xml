<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#f07a7f" />
            <gradient android:angle="-90" android:startColor="#f5b5b7" android:endColor="#f0a1a4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#f07a7f" />
            <solid android:color="#e8888c"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#f07a7f" />
            <gradient android:angle="-90" android:startColor="#f0a1a4" android:endColor="#e8888c" />
        </shape>
    </item>
</selector>