<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wynd.app.wyndterminalpocket.Orders"
    tools:showIn="@layout/activity_orders">

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/period">
        <LinearLayout
            android:id="@+id/period1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:background="@drawable/shape_button"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textStyle="bold"
                android:id="@+id/date1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:background="@drawable/circle_shape"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_marginStart="20sp"
                android:id="@+id/time1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/period1"
            android:id="@+id/between"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="↕"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/period2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/between"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:padding="10dp"
                android:background="@drawable/shape_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/date2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:background="@drawable/circle_shape"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_marginStart="20sp"
                android:id="@+id/time2"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btnPeriods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afficher par période"
            android:layout_below="@+id/period2"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_button"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/period"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:id="@+id/spinner"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/device"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/rest_prompt" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/spinner2"
        android:layout_below="@id/spinner"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/status"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/rest_prompt" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/total_orders"
        android:layout_below="@id/spinner2"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TOTAL"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_below="@id/total_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>
