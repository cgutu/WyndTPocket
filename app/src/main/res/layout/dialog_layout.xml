<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <CheckBox
            android:id="@+id/bydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Par date"/>
        <CheckBox
            android:id="@+id/byperiod"
            android:layout_below="@+id/bydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Par période"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/period">
        <LinearLayout
            android:padding="10dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/onlyonedate">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"
                android:id="@+id/onedate"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textStyle="bold"
                android:layout_marginStart="10sp"
                android:id="@+id/onetime"
                />
        </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/period1"    android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:id="@+id/date1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textStyle="bold"
            android:layout_marginStart="10sp"
            android:id="@+id/time1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/period1"
        android:id="@+id/between"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="↕"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/period2"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/period1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:id="@+id/date2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textStyle="bold"
            android:layout_marginStart="10sp"
            android:id="@+id/time2"
            />

    </LinearLayout>

    </RelativeLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@id/period"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:id="@+id/spinner"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/rest_prompt" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/spinner2"
        android:layout_below="@id/spinner"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/rest_prompt" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>